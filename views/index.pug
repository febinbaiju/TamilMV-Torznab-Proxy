<!DOCTYPE html>
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content=
            "width=device-width, initial-scale=1.0")
        title=title
    style
        include styles.css
    body
        .form
            h2=message
            if(savedMessage)
                div(class='success-container')
                    div(class='success-message')
                        | &#10003;
                br
            form(action="/",method="POST")
                div(class='separator')
                    label(for="name") TAMILMV URL:
                    |  
                    input#name(type="text", name="tamilmv_url", class='fields', required, value=tamilmv_url)
                    |  
                    a(href='https://torrents-proxy.com/tamilmv/', target='_blank') Latest Proxy List
                div(class="separator")
                    label(for="custom_search_toggle") Custom Search:
                    |  
                    - var notChecked = !custom_search
                    input#custom_search_toggle(type="radio", name="custom_search_toggle", value="1" ,checked=customSearchOn)
                    |  On 
                    input#custom_search_toggle_1(type="radio", name="custom_search_toggle", value="0",checked=customSearchOff)
                    |  Off
                div(class="separator")
                    label(for="custom_search") Custom Search Keyword:
                    |  
                    input#custom_search(type="text", name="custom_search", required, class="fields", value=custom_search_keyword)
                    a(href=tryUrl, target="_blank") Try
                button(type="submit") Save
